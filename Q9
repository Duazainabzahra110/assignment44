#include <iostream>
#include <vector>
using namespace std;

struct Student {
    string name;
    int id;
};
struct Course {
    string courseName;
    string courseCode;
    vector<Student> students;
};
int main() {
    int courseCount;
    cout << "Enter number of courses: ";
    cin >> courseCount;
    vector<Course> courses;
    for (int i = 0; i < courseCount; i++) {
        Course c;
        int studentCount;
        cout << "Enter course name: ";
        cin >> c.courseName;
        cout << "Enter course code: ";
        cin >> c.courseCode;
        cout << "Enter number of students enrolled: ";
        cin >> studentCount;
        for (int j = 0; j < studentCount; j++) {
            Student s;
            cout << "Enter student name: ";
            cin >> s.name;
            cout << "Enter student ID: ";
            cin >> s.id;

            c.students.push_back(s);
        }

        courses.push_back(c);
    }
    cout << endl;
    for (int i = 0; i < courses.size(); i++) {
        cout << "Course Name: " << courses[i].courseName << endl;
        cout << "Course Code: " << courses[i].courseCode << endl;
        cout << "Enrolled Students:" << endl;

        for (int j = 0; j < courses[i].students.size(); j++) {
            cout << "Name: " << courses[i].students[j].name
                 << ", ID: " << courses[i].students[j].id << endl;
        }

        cout << endl;
    }
    return 0;
}
